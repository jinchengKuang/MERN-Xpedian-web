<section id="listing-details" class="mx-5">

    <div class="container details-header">
        <div class="row">
            <div class="col-3">
                <div class="details-property-type h1 text-light bg-success text-center rounded pb-1 mt-3">
                    {{listing.property_type}}
                </div>
            </div>
            <div class="col-9">
                <div class="details-title h1 text-light mt-3">
                    {{listing.title}}
                    <p class="h5 mt-3">                    
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
  <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6z"/>
                        </svg>  {{listing.location}}
                    </p>
                </div>
            </div>

        </div>
    </div>
    <hr>
    <div class="container">
        <div>
            <img src="{{listing.lg_image}}" alt="" class="details-large-pic">
        </div> 

        <div class="details-pics-container">

            {{#each smImages}}
                <div class="details-pic">
                    <img src="{{this}}" alt="">
                </div>
            {{/each}}      
        </div>
    </div>

    <div class="row mx-5">
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h4>Property Type: {{listing.property_type}}</h4>
                    <h6>Bedroom: {{listing.details.bedroom}}</h6>
                    <h6>Living Room: {{listing.details.living_room}}</h6>
                    <h6>Bathroom: {{listing.details.bathroom}}</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-2">
            <div class="card">
                <div class="card-body">
                    <h6>Twin Bed: {{listing.details.beds.twin}}</h6>
                    <h6>Full Bed: {{listing.details.beds.full}}</h6>
                    <h6>King Bed: {{listing.details.beds.king}}</h6>
                    <h6>Sofa Bed: {{listing.details.beds.sofa_bed}}</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5>{{listing.summary}}</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a href="/" class="btn btn-lg btn-primary mt-3"><p class="h3 px-3">BOOK IT NOW  ${{listing.price}}</p> </a>
    </div>
</section>